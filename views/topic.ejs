        function HoverTagOver(spanA,spanB,spanC){
            anime({
                targets: spanA,
                fontSize: "24px",
                opacity:1,
                begin: BLOCK(spanA),
                duration:1000
            });
            anime({
                targets: spanB,
                top:"20px",
                fontSize: "18px",
                opacity:1,
                begin: BLOCK(spanB),
                duration:1000
            });
            anime({
                targets: spanC,
                fontSize: "18px",
                opacity:1,
                begin: BLOCK(spanC),
                duration:1000
            });
        }
        function HoverTagOut(spanA,spanB,spanC){
            anime({
                targets: spanA,
                fontSize: "12px",
                opacity:0,
                begin: NONE(spanA),
                duration:1000
            });
            anime({
                targets: spanB,
                fontSize: "8px",
                opacity:0,
                begin: NONE(spanB),
                duration:1000
            });
            anime({
                targets: spanC,
                fontSize: "8px",
                opacity:0,
                begin: NONE(spanC),
                duration:1000
            });
        }

        function BLOCK(span) {
            document.querySelector(span).style.display = 'flex';
        }

        function NONE(span) {
            document.querySelector(span).style.display = 'none';
        }

        function CloseLightBox(){
            document.querySelector('.sign-lightpage').style.display = 'none';
