   <!-- SIGN IN BOX -->
<div class="info-cancel" onclick="CloseLightBox()">
    <i class="fas fa-times icontimes"></i>
</div>
<div class="signin-box">
    <p class="signin-header">SIGN IN</p>
    <form class="form-class" action="signin" method="POST">
        <label for="username">Username:</label>
        <input type="text" name="username" class="input-bar" required autocomplete="false" value="admin">
        <label for="password">Password:</label>
        <input type="password" name="password" class="input-bar" required autocomplete="false" value="admin">
        <input type="text" name="signAddress" id="signin-address" class="disable-input-class">
        <input type="text" name="signValue" id="signin-value" class="disable-input-class" value="signin">
        <script>
            SIGNIN_VALUE=document.getElementById("signin-address")
            SIGNIN_VALUE.value=window.location.pathname
        </script>
        <div class="form-class-buttons">
            <button type="submit" class="signin">Sign In</button>
            <button type="button" class="cancel" onclick="CloseLightBox()">Close</button>
        </div>
    </form>
</div>

