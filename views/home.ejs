    <script>
        function HoverTagOver(spanA,spanB){
            anime({
                targets: spanA,
                fontSize: "24px",
                opacity:1,
                begin: BLOCK(spanA),
                duration:0
            });
            anime({
                targets: spanB,
                top:"20px",
                fontSize: "10px",
                opacity:1,
                begin: BLOCK(spanB),
                duration:0
            });
        }
        function HoverTagOut(spanA,spanB){
            anime({
                targets: spanA,
                fontSize: "12px",
                opacity:0,
                begin: NONE(spanA),
                duration:0
            });
            anime({
                targets: spanB,
                fontSize: "8px",
                opacity:0,
                begin: NONE(spanB),
                duration:0
            });
        }

        function BLOCK(span) {
            document.querySelector(span).style.display = 'block';
        }

        function NONE(span) {
            document.querySelector(span).style.display = 'none';
        }

        function Topic(){
            topic="topics"
            window.location.href = `http://127.0.0.1:5501/HTML/${topic}.html`;
